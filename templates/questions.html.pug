extends /index.html.pug

block content
    div(class="container text-center")
      div(class="row")
        h1 Questions About Article
      div(class="row p-5")
        div(class="col-1")
        div(class="col")
          form(action="/processQuestion" method="POST")
            div(class="mb-3")
                input(type="text"
                    id="disabledTextInput"
                    class="form-control"
                    placeholder="Enter Questions you have about the text"
                    name="question")
            div(class="d-grid d-md-flex justify-content-end")
                button(type="submit" class="btn btn-primary") Submit
        div(class="col")
          textarea(class="form-control"
                   id="exampleFormControlTextarea1"
                   rows="6"
                   readonly
                   name="fullChat")